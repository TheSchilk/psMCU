#
# Snake.psASM
#
# A simple snake game for an 8x8 LED Matrix
#

@include Setup.psASM
@include StdLib.psASM
@include Render.psASM
@include UpdateBoard.psASM
@include UpdateGamestate.psASM

# Entry Point:
MAIN:
    CALL SETUP
    JMP MAIN_LOOP

# Game Loop:
MAIN_LOOP: 
    CALL UPDATE_BOARD
    CALL RENDER
    CALL UPDATE_GAMESTATE
    
    # Check game over
    IFRM SYS3,S3_A0
        JMP GAME_OVER

    JMP MAIN_LOOP

GAME_OVER: 
    HALT
    JMP MAIN
