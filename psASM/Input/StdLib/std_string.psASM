#
# std_string.psASM
# Part of StdLib for psMCU.
# Contains macros to save string literals to ram/stack.
#

@macro ascii_heap $str, $adr
    PUSHA
    @for $i, 0, $i<strlen($str), $i+1
        LITA $str[$i] 
        SVA $adr+$i
    @end
    POPA
@end

@macro ascii_stack $str
    @for $i, 0, $i<strlen($str), $i+1
        LITA $str[$i] 
        PUSHA
    @end
@end
